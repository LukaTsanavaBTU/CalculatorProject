<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_gravity="end"
            android:gravity="center"
            android:hint=""
            android:scrollHorizontally="true"
            android:text="0"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="60sp" />

    </HorizontalScrollView>


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="clickClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_weight="1"
                android:background="@drawable/animated_rectangle_button_drawable"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="CLR"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="clickBackspace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_weight="1"
                android:background="@drawable/animated_rectangle_button_drawable"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="⌫ "
                android:textColor="@color/white"
                android:textSize="30sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="clickNumber"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/animated_round_button_drawable"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="clickNumber"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/animated_round_button_drawable"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="clickNumber"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/animated_round_button_drawable"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="clickOperator"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/animated_round_button_drawable"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="÷"
                android:textColor="@color/green"
                android:textSize="30sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="clickNumber"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/animated_round_button_drawable"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="clickNumber"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/animated_round_button_drawable"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="clickNumber"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/animated_round_button_drawable"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="clickOperator"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/animated_round_button_drawable"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="×"
                android:textColor="@color/green"
                android:textSize="30sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="clickNumber"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/animated_round_button_drawable"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="clickNumber"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/animated_round_button_drawable"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="clickNumber"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/animated_round_button_drawable"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="clickOperator"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/animated_round_button_drawable"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/green"
                android:textSize="30sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="clickDecimal"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/animated_round_button_drawable"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="."
                android:textColor="@color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="clickNumber"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/animated_round_button_drawable"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="clickEquals"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/animated_round_button_drawable"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="="
                android:textColor="@color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="clickOperator"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/animated_round_button_drawable"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/green"
                android:textSize="30sp" />


        </TableRow>


    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>